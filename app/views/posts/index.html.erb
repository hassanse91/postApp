<div class="container">
<div class="row">

<% @posts.each do |post| %>
<div class="col-xs-6 col-md-3">
<div class="thumbnail">
  <%= link_to ( image_tag post.image.url(:medium), class: 'image'), post %>

<div class="caption">
  <p> <strong> Ttile :</strong> <%= post.title %></p>
  <p><strong>  Content: </strong> <%= post.content %> </p>
  <p> <strong> Created at :</strong> <%= time_ago_in_words(post.created_at) %></p>
    <p>Created by : <%= pic.user.UserName %></p>
  <p> <%= link_to 'show post', post, class: "btn btn-default" %> </p>
</div>
</div>
</div>
<% end %>

</div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Rules of this Web-Site
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        this is the content of the rules of this application
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>